{
    "compilerOptions": {
        // compile to es5 since we want to build a package with browser compatibility
        "target": "es5",
        // Use commonjs for compatibility.
        "module": "commonjs",
        // This should be true for typescript to export typed definitions together with the compiled javascript
        "declaration": true,
        // The javascript will be compiled to the lib folder.
        "outDir": "./lib",
        "strict": true
    },
    // Include all source files in the src folder
    "include": [
        "src"
    ],
    // We donâ€™t want to transpile node_modules, or tests since these are only used during development
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}